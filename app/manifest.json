{
	"name": "GM Checker",
	"version": "0.2.1",
	"manifest_version": 2,
	"description": "__MSG_appDescription__",
	"default_locale": "ja",

	"browser_action": {
		"default_icon": "image/icon19.png",
		"default_title": "__MSG_browserActionTitle__",
		"default_popup": "config.html"
	},

	"background": {
		"scripts": ["premium.js", "background.js"],
		"persistent": false
	},

	"content_scripts": [{
		"js": ["jquery-2.1.4.min.js", "jquery-ui-1.11.4.min.js", "resource.js", "dialog.js", "main.js"],
		"css": ["css/jquery-ui-1.11.4.css", "css/gmc.css"],
		"matches": ["http://mail.google.com/*", "https://mail.google.com/*"],
		"run_at": "document_end"
	}],

	"permissions": [
		"storage"
	],

	"web_accessible_resources": [
		"html/send_recipe.html",
		"image/staticons.png",
		"image/diagonals_thick.png"
	],

	"icons": {
		"128": "image/icon48.png",
		"48": "image/icon48.png",
		"32": "image/icon32.png"
	}
}
